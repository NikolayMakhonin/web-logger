{
	"extends": "./tsconfig.json",
	"include": [
		"**/*.js",
		"**/*.ts",
		"**/.eslintrc.js"
	],
	"exclude": [
		"node_modules",
		"tmp",
		"dist",
		"_trash",
		"docs",
		"docs/**/*",
		"browser/**/*.js",
		"node/**/*.js",
		"__sapper__",
		"**/polyfill*/**",
		"src/assets/**/*",
		"static",
		"env/logger/server/**/*"
	]
}
