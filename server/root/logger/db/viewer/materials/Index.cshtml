@using BusinessAutomationWeb.Helpers;
@{
    ViewBag.Title = "Home Page";
    var nodeIdSuffix = ViewHelpers.GetNewNodeIdSuffix();
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="panel panel-primary main_panel">
        <div class="panel-heading">
            Cron Inventory Feed Status
        </div>
        <div class="panel-body">
            <!-- Tabs -->
            <ul class="nav nav-tabs">
                @*<li class="nav active"><a href="#tab_test@(nodeIdSuffix)" data-toggle="tab">Test</a></li>*@
                <li class="nav active"><a href="#tab_products@(nodeIdSuffix)" data-toggle="tab">Products</a></li>
                <li class="nav"><a href="#tab_feed_products@(nodeIdSuffix)" data-toggle="tab">Feed Products</a></li>
                <li class="nav"><a href="#tab_error_log@(nodeIdSuffix)" data-toggle="tab">Error Log</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                @*<div class="tab-pane fade in active" id="tab_test@(nodeIdSuffix)">
                    @Html.Partial("~/Views/Shared/Upload/_Files.cshtml")
                </div>*@
                <div class="tab-pane fade in active" id="tab_products@(nodeIdSuffix)">
                    <iframe class="tab_iframe" data-src="/Products" frameBorder="0"></iframe>
                </div>
                <div class="tab-pane fade" id="tab_feed_products@(nodeIdSuffix)">
                    <iframe class="tab_iframe" data-src="/FeedProducts" frameBorder="0"></iframe>
                </div>
                <div class="tab-pane fade" id="tab_error_log@(nodeIdSuffix)">
                    <iframe class="tab_iframe" data-src="/Log" frameBorder="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
